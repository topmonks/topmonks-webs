{
  "name": "TopMonks-webs",
  "version": "1.0.0",
  "description": "TopMonks Webs",
  "repository": "https://github.com/topmonks/topmonks-webs.git",
  "author": "TopMonks",
  "license": "MIT",
  "dependencies": {
    "@material/layout-grid": "^0.41.0",
    "bluebird": "^3.5.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "blendid": "^4.4.3",
    "broken-link-checker-local": "^0.2.0",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "gulp-markdown-to-json": "^1.1.0",
    "gulp-merge-json": "^1.3.1",
    "gulp-watch": "^5.0.1",
    "http-server": "^0.11.1",
    "lighthouse": "^3.2.1",
    "marked": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.0",
    "stylelint": "^9.7.1",
    "stylelint-config-prettier": "^4.0.0",
    "tap-xunit": "^2.3.0"
  },
  "scripts": {
    "create-site": "node ./create-site",
    "start:www.topmonks.com": "BLENDID_CONFIG_PATH=./www.topmonks.com/config/ blendid",
    "start:www.topmonks.cz": "BLENDID_CONFIG_PATH=./www.topmonks.cz/config/ blendid",
    "start:prodeti.topmonks.cz": "BLENDID_CONFIG_PATH=./prodeti.topmonks.cz/config/ blendid",
    "start:caffe.topmonks.cz": "BLENDID_CONFIG_PATH=./caffe.topmonks.cz/config/ blendid",
    "start:studio.topmonks.com": "BLENDID_CONFIG_PATH=./studio.topmonks.com/config/ blendid",
    "start:blockchain.topmonks.com": "BLENDID_CONFIG_PATH=./blockchain.topmonks.com/config/ blendid",
    "build:www.topmonks.com": "BLENDID_CONFIG_PATH=./www.topmonks.com/config/ blendid -- build",
    "build:www.topmonks.cz": "BLENDID_CONFIG_PATH=./www.topmonks.cz/config/ blendid -- build",
    "build:prodeti.topmonks.cz": "BLENDID_CONFIG_PATH=./prodeti.topmonks.cz/config/ blendid -- build",
    "build:caffe.topmonks.cz": "BLENDID_CONFIG_PATH=./caffe.topmonks.cz/config/ blendid -- build",
    "build:studio.topmonks.com": "BLENDID_CONFIG_PATH=./studio.topmonks.com/config/ blendid -- build",
    "build:blockchain.topmonks.com": "BLENDID_CONFIG_PATH=./blockchain.topmonks.com/config/ blendid -- build",
    "build": "run-s build:*",
    "test:ava": "ava --tap | tap-xunit > ./results/ava.xml",
    "test:eslint": "eslint ./ --format junit --output-file ./results/eslint.xml",
    "test:stylelint": "stylelint-config-prettier-check",
    "test:lighthouse": "lighthouse http://localhost:8080/ --output json --output html --output-path ./results/lh.html --chrome-flags=\"--headless\" --no-enable-error-reporting --skip-audits is-on-https --skip-audits themed-omnibox --skip-audits redirects-http --skip-audits load-fast-enough-for-pwa --skip-audits service-worker --skip-audits splash-screen --skip-audits webapp-install-banner --skip-audits works-offline",
    "test:broken-links:www.topmonks.com": "blcl ./public/www.topmonks.com -ro --exclude linkedin.com --exclude maps.googleapis.com --exclude insight.topmonks.com/avatar/ --exclude caffe.topmonks.cz --exclude blog.topmonks.com",
    "test:broken-links:www.topmonks.cz": "blcl ./public/www.topmonks.cz -ro --exclude linkedin.com --exclude maps.googleapis.com --exclude insight.topmonks.com/avatar/ --exclude caffe.topmonks.cz --exclude blog.topmonks.com",
    "test:broken-links:prodeti.topmonks.cz": "blcl ./public/prodeti.topmonks.cz -ro --exclude linkedin.com --exclude caffe.topmonks.cz --exclude blog.topmonks.com",
    "test:broken-links:caffe.topmonks.cz": "blcl ./public/caffe.topmonks.cz -ro --exclude linkedin.com --exclude caffe.topmonks.cz --exclude blog.topmonks.com",
    "test:broken-links:studio.topmonks.com": "blcl ./public/studio.topmonks.com -ro --exclude linkedin.com --exclude caffe.topmonks.cz --exclude blog.topmonks.com",
    "test:broken-links:blockchain.topmonks.com": "blcl ./public/blockchain.topmonks.com -ro --exclude linkedin.com --exclude caffe.topmonks.cz --exclude blog.topmonks.com",
    "test:broken-links": "run-s test:broken-links:*",
    "test": "run-p test:eslint test:stylelint"
  }
}